name: JR GitLint

on:
  push:
    branches: [ $default-branch ]
  pull_request:
    branches: [ $default-branch ]

jobs:
  build:

    runs-on: ubuntu-latest

    container:
      image: jorisroovers/gitlint

    steps:
#   - uses: actions/checkout@v2
#   - name: Install dependencies
#     run: shards install
    - name: Run tests
      run: gitlint --commits upstream/${GITHUB_BASE_REF}..origin/${GITHUB_HEAD_REF}
    - run: echo "Job status is ${{ job.status }}."
